{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "verbatimModuleSyntax": false,
    "lib": ["ES2022"],        
    "types": ["node", "express"]         
  },
  "include": ["src"]
}
